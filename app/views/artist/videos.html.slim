.row
	= render 'artist/nav'
	.span13
		ul.breadcrumb
			li
				a(href="/artist/#{ @artist.slug }") = @artist.name
				span.divider = "Â»"
			li.active
				| Videos
				
		.page-header
			h1 Videos

		- unless @videos.empty?
			ul.video-grid.row
				- @videos.each do |v|
					li.span6
						a.clearfix(href=v.src_url data-embed-url=v.embed_html)
							img.video-thumb(src=v.thumb_url alt='thumbnail')
							p.video-title = v.title
		- else
			p.alert-message Sorry, no videos available for this artist.